                <script>
                    function printInvoice() {
                        // Hide elements that should not be printed
                        const elementsToHide = document.querySelectorAll('.hide-on-print');
                        elementsToHide.forEach((element) => {
                            element.style.display = 'none';
                        });
                        
                        // Get the content within the printable area
                        const printableArea = document.getElementById('printableArea');
                        const tableContent = printableArea.innerHTML; // Get the table content
                        
                        // Open a new window for printing
                        const printWindow = window.open('', '', 'width=800,height=600');
                        printWindow.document.open();
                        printWindow.document.write('<html><head><style>table, th, td {border: .5px solid black;padding : 2px;}</style></head><body>');
                        printWindow.document.write(tableContent); // Write the table content
                        printWindow.document.write('</body></html');
                        printWindow.document.close();
                        
                        // Print the content
                        printWindow.print();
                        
                        // Close the print window
                        printWindow.close();
                        
                        // Restore the hidden elements after printing is done
                        elementsToHide.forEach((element) => {
                            element.style.display = '';
                        });
                    }
                        
                </script>

                <script>
                    $(document).ready(function () {
                        // Add change event listener to the branch dropdown
                        $('#table_search').change(function () {
                            var selectedBranch = $(this).val();
                            
                            // Show all rows initially
                            $('.order-row').show();
                            $('.hidden-row').hide();
                            
                            // Flag to check if any match is found
                            var foundMatch = false;
                            
                            // If a branch is selected, hide rows that don't match the selected branch
                            if (selectedBranch !== '') {
                                $('.order-row').each(function () {
                                    var rowBranch = $(this).data('branch');
                                    if (rowBranch !== selectedBranch) {
                                        $(this).hide();
                                    } else {
                                        foundMatch = true;
                                    }
                                });
                            }
                            
                            console.log(foundMatch)
                            // If no match is found, show the hidden row
                            if (!foundMatch) {
                                $('.hidden-row').show();
                            }
                        });
                    });
                </script>

