<%- include('../../partials/main', { pageTitle: 'Internal Transfer' }) %>

    <div class="page-body">

        <!-- New Product Add Start -->
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-sm-8 m-auto">
                            <form class="theme-form theme-form-2 mega-form" id="productForm" method="POST" action="/admin/auth/internal-transfer" >
                                <div class="card">
                                    <div class="card-body">
                                        <div class="card-header-2">
                                            <h5>Internal Money Transfer</h5>
                                        </div>

                                        <div class="mb-4 row align-items-center">
                                            <label class="col-sm-3 col-form-label form-label-title">From </label>
                                            <div class="col-sm-9">
                                                <select class="js-example-basic-single w-100" name="from" id="payment_method2">
                                                    <option value="none" disabled selected>-- Select Payment Method --</option> 
                                                    <% if (bank != '') { %>        
                                                        <% bank.forEach((row, index) => { %> 
                                                            <option value="<%- row.name %>"><%- row.name %></option>
                                                        <% }) %>
                                                    <%  } else { %>
                                                        <option value="none" disabled>No Banks Available</option>
                                                    <% } %>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="mb-4 row align-items-center">
                                            <label class="col-sm-3 col-form-label form-label-title">To</label>
                                            <div class="col-sm-9">
                                                <select class="js-example-basic-single w-100" name="to" id="payment_method">
                                                    <option value="none" disabled selected>-- Select Payment Method --</option> 
                                                    <% if (bank != '') { %>        
                                                        <% bank.forEach((row, index) => { %> 
                                                            <option value="<%- row.name %>"><%- row.name %></option>
                                                        <% }) %>
                                                    <%  } else { %>
                                                        <option value="none" disabled>No Banks Available</option>
                                                    <% } %>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="mb-4 row align-items-center">
                                            <label class="form-label-title col-lg-3 col-md-3 mb-0">Amount</label>
                                            <div class="col-sm-9 col-lg-9">
                                                <div class="custom-dropdown">
                                                    <input class="form-control" type="text" name="amount" placeholder="Enter the Amount you want to Transfer">
                                                </div>
                                            </div>
                                        </div> 
                                        
                                        <div class="mb-4 row align-items-center">
                                            <label class="form-label-title col-lg-3 col-md-3 mb-0">Date</label>
                                            <div class="col-sm-9 col-lg-9">
                                                <div class="custom-dropdown">
                                                    <input class="form-control" type="date" name="date">
                                                </div>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                            
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <button class="btn btn-solid" type="submit">Transfer Now</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <!-- New Product Add End -->

        <!-- footer Start -->
        <%- include('../../partials/footer') %>    
        <!-- footer En -->
    </div>

    <%- include('../../partials/end') %>


    